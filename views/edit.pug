extends layout

block content
    .col-6
        form(method='POST' action='/users/update-user/'+user._id)
            div.body
                <div class="form-error">#{message}</div>
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Name" required="required" value="#{user.name}"/>
                </div>
                <div class="form-group">
                    <input type="text" name="username" class="form-control" placeholder="Username" required="required" value="#{user.username}"/>
                </div>               
        
            div.footer                                                              
                button.btn.bg-olive.btn-block(type="submit") Update User  
    </div>